<head>
  <link rel="stylesheet" href="/css/card.css">
  <link href="https://fonts.googleapis.com/css?family=EB+Garamond&display=swap" rel="stylesheet">
</head>

{{#if user}}

<nav class="navbar is-black" role="navigation" aria-label="main navigation">
  <div class="container">
    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a href="/" class="navbar-item">
          Home
        </a>

        <a href="/anto" class="navbar-item">
          Panel De Anto
        </a>

        <a href="/anto/options" class="navbar-item">
          Opciones
        </a>

      </div>

    </div>
  </div>
</nav>

{{/if}}

{{#if empty}}
<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        No encontramos lo que buscas.
      </h1>
    </div>
  </div>
</section>
{{else}}

<div class="container is-fluid has-text-centered has-text-justified">
  <div class="columns is-multiline is-vcentered">
    {{#each ads}}

    <div class="column
      is-12-mobile
      is-12-tablet
      is-one-third-desktop
      is-one-third-widescreen
      is-one-quarter-fullhd">

      <a href="/aviso/{{_id}}">
        <div class="card">
          <div class="card-content">
            <p class=" has-text-justified has-text-black has-text-weight-bold is-size-4-fullhd is-size-5-widescreen is-size-5-desktop is-size-4-mobile is-size-4-tablet">
              {{body}}
            </p>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
    {{/if}}





  </div>
</div>