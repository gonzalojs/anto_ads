<head>
  <title>{{title}}</title>

  <link rel="stylesheet" type="text/css" href="/css/landing.css">
</head>

<body>
  {{#if user}}

  <nav class="navbar is-black" role="navigation" aria-label="main navigation">
    <div class="container">
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a href="/" class="navbar-item">
            Home
          </a>

          <a href="/anto" class="navbar-item">
            Panel De Anto
          </a>

          <a href="/anto/options" class="navbar-item">
            Opciones
          </a>

        </div>

      </div>
    </div>
  </nav>

  {{/if}}
  <section class="hero  is-fullheight">

    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="columns is-centered">
          <div class="column is-6-fullhd is-6-widescreen is-6-desktop is-12-mobile is-10-tablet">
            <figure class="image">
              <img class="is-16by9" src="/img/header.svg">
            </figure>
          </div>

        </div>
        <div class="columns is-centered">
          <div class="column is-4-fullhd is-4-widescreen is-4-desktop is-10-mobile is-8-tablet">
            <h2 class="subtitle ups">
              <p class="has-text-justified has-text-black has-text-weight-bold is-size-4-fullhd is-size-5-widescreen is-size-5-desktop is-size-4-mobile is-size-4-tablet">
                {{header}}
              </p>
            </h2>
          </div>
        </div>
        <div class="columns is-centered">
          <div class="column is-4-fullhd is-4-widescreen is-4-desktop is-10-mobile is-8-tablet">
            <div class="field is-grouped ups2">
              <p class="control is-expanded">
                <input id="SA" class="input is-black" type="text" placeholder="Buscar">
              </p>
              <div class="control">
                <button id="boton" onclick="search()" class="button is-black custom-border"> BUSCAR </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
  <script type="text/javascript" src="/js/search.js"></script>
</body>